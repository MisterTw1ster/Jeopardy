<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="regularButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/trans</item>
        <item name="minWidth">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="regularEditText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="regularFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>